{
  "compilerOptions": {
    "alwaysStrict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "pretty": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["./src/__tests__"]
}
